// –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —Ç–µ–º—ã
const themeToggleBtn = document.getElementById('theme-toggle');
themeToggleBtn.addEventListener('click', () => {
  document.body.classList.toggle('light-theme');
  if (document.body.classList.contains('light-theme')) {
    themeToggleBtn.textContent = 'üåû';
  } else {
    themeToggleBtn.textContent = 'üåô';
  }
});

// –ó–∞–≥—Ä—É–∑–∫–∞ —Å—Ç–∞—Ç—É—Å–∞ Minecraft-—Å–µ—Ä–≤–µ—Ä–∞ (ping + –æ–Ω–ª–∞–π–Ω)
// –ò—Å–ø–æ–ª—å–∑—É–µ–º API https://api.mcsrvstat.us/2/play.yungpixel.net
const serverStatusDiv = document.getElementById('server-status');

async function fetchServerStatus() {
  try {
    const response = await fetch('https://api.mcsrvstat.us/2/play.yungpixel.net');
    const data = await response.json();

    if (data.online) {
      serverStatusDiv.innerHTML = `
        <p>üü¢ –°–µ—Ä–≤–µ—Ä –æ–Ω–ª–∞–π–Ω</p>
        <p>–ò–≥—Ä–æ–∫–æ–≤ –æ–Ω–ª–∞–π–Ω: ${data.players.online} –∏–∑ ${data.players.max}</p>
        <p>–í–µ—Ä—Å–∏—è —Å–µ—Ä–≤–µ—Ä–∞: ${data.version}</p>
      `;
    } else {
      serverStatusDiv.innerHTML = `<p>üî¥ –°–µ—Ä–≤–µ—Ä –æ—Ñ—Ñ–ª–∞–π–Ω –∏–ª–∏ –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω</p>`;
    }
  } catch (error) {
    serverStatusDiv.innerHTML = `<p>–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç–∞—Ç—É—Å–∞ —Å–µ—Ä–≤–µ—Ä–∞.</p>`;
    console.error(error);
  }
}
fetchServerStatus();

